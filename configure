#!/usr/bin/env bash

# defaults
prefix="/usr/local"
bindir=""
enable_error_handling=1

show_help() {
    cat <<EOF
Usage: ./configure [OPTIONS]

Options:
    --prefix=DIR                Set installation prefix (default: $prefix)
    --bindir=DIR                Set binary directory (default: \$prefix/bin)
    --disable-error-handling    Disable building and installing documentation
    --help                      Show this help message and exit
EOF
    exit 0
}

while [ $# -gt 0 ]; do
  case "$1" in
    --prefix=*)                 prefix="${1#*=}"        ;;
    --bindir=*)                 bindir="${1#*=}"        ;;
    --disable-error-handling)   enable_error_handling=0 ;;
    --help) show_help                ;;
    *) echo "Unknown option: $1" >&2 ;;
  esac
  shift
done

[ -z "$bindir" ] && bindir="$prefix/bin"

cat <<EOF
Installation prefix: $prefix
Binary directory:    $bindir
EOF

cat > config.mk <<EOF
PREFIX=$prefix
BINDIR=$bindir
ENABLE_ERROR_HANDLING=$enable_error_handling
EOF

cat <<EOF
Generated config.mk
Now run 'make' to build the project.
EOF
